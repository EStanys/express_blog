<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>

    <main role="main">
      

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% blogDb.forEach(({title, author, date, body, imgUrl, id}) => { %>
              <!-- one card -->
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <div class="h-50">
                  <img src="<%= imgUrl %>" alt="none" class="w-100 mb-3">
                  </div>
                  <h5 class="card-title"><%= title %> </h5>
                  <h6 class="text-muted"><%= author %> </h6>
                  <p class="card-text"
                    ><%= body %> </p
                  >
                  <div class="d-flex flex-column justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="./singlePage/<%= id %>" class="btn btn-sm btn-outline-secondary">View</a>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted mt-2"><%= date %> </small>
                  </div>
                </div>
              </div>
            </div>
<!-- one card end -->
            <% }) %>

            
          </div>
        </div>
      </div>
    </main>

<%- include('./partials/footer.ejs') %>
